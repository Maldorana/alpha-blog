<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-8">
        <%= render 'shared/errors', obj: @user %>
        <%= form_with(model: @user, local: true) do |f| %>

            <div class="mb-3 row">
                <%= f.label :username, class: "form-label" %>
                <%= f.text_field :username, class: "form-control shadow-sm", placeholder: "Choose your username" %>
            </div>

            <div class="mb-3 row">
                <%= f.label :email, class: "form-label" %></br>
                <%= f.email_field :email, class: "form-control shadow-sm", placeholder: "Enter your email address" %>
            </div>

            <div class="mb-3 row">
                <%= f.label :password, class: "form-label" %></br>
                <%= f.password_field :password, class: "form-control shadow-sm", placeholder: "Choose your password" %>
            </div>

            <div class="mb-3 row justify-content-center" id="full-btn">
                    <%= f.submit(@user.new_record? ? "Sign up" : "Update profile", class: "btn btn-primary btn-lg shadow-sm") %>
            </div>

            <%= link_to 'Cancel and return to profile', @user, class: "row justify-content-center" %>

        <% end %>
        </div>
    </div>
</div>