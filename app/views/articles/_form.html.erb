<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-8">
        <%= render 'shared/errors', obj: @article %>
        <%= form_with(model: @article, local: true) do |f| %>

            <div class="mb-3 row">
                <%= f.label :title, class: "form-label" %>
                <%= f.text_field :title, class: "form-control shadow-sm", placeholder: "Enter your title" %>
            </div>

            <div class="mb-3 row">
                <%= f.label :description, class: "form-label" %></br>
                <%= f.text_area :description, rows: 10, class: "form-control shadow-sm", placeholder: "Enter your description" %>
            </div>

            <div class="mb-3 row">
                <%= f.label "Choose categories below", class: "form-label" %></br>
                <%= f.collection_select(:category_ids, Category.all, :id, :name,
                { prompt: nil}, { multiple: true, size: Category.count, class: "custom-select shadow-sm" }) %>
            </div>

            <div class="mb-3 row justify-content-center" id="full-btn">
                    <%= f.submit nil, class: "btn btn-primary btn-lg shadow-sm" %>
            </div>

            <%= link_to 'Cancel and return to all articles', articles_path, class: "row justify-content-center" %>

        <% end %>
        </div>
    </div>
</div>

